<main class="main">
  <div class="card-container">
    {{#if tours}}
      {{#each tours}}
          <div class="card">
            <div class="card__header">
              <div class="card__picture">
                <div class="card__picture-overlay">&nbsp;</div>
                <img
                  src="img/tours/{{this.imageCover}}"
                  alt="{{this.name}}"
                  class="card__picture-img"
                />
              </div>

              <h3 class="heading-tertirary">
                <span>{{this.name}}</span>
              </h3>
            </div>

            <div class="card__details">
              <h4 class="card__sub-heading">{{this.difficulty}} {{this.duration}}-day tour</h4>
              <p class="card__text">
                {{this.summary}}
              </p>
              <div class="card__data">
                <svg class="card__icon">
                  <use xlink:href="img/icons.svg#icon-map-pin"></use>
                </svg>
                <span>{{this.startLocation.description}}</span>
              </div>
              <div class="card__data">
                <svg class="card__icon">
                  <use xlink:href="img/icons.svg#icon-calendar"></use>
                </svg>
                <span>{{getFirstStartDate this.startDates}}</span>
              </div>
              <div class="card__data">
                <svg class="card__icon">
                  <use xlink:href="img/icons.svg#icon-flag"></use>
                </svg>
                <span>{{lenLocations this.locations}} stops</span>
              </div>
              <div class="card__data">
                <svg class="card__icon">
                  <use xlink:href="img/icons.svg#icon-user"></use>
                </svg>
                <span>{{this.maxGroupSize}} people</span>
              </div>
            </div>

            <div class="card__footer">
              <p>
                <span class="card__footer-value">${{this.price}}</span>
                <span class="card__footer-text">per person</span>
              </p>
              <p class="card__ratings">
                <span class="card__footer-value">{{this.ratingsAverage}}</span>
                <span class="card__footer-text">rating ({{this.ratingsQuantity}})</span>
              </p>
              <a href="/tours/{{this.slug}}" class="btn btn--green btn--small">Details</a>
            </div>
          </div>
      {{/each}}
    {{else}}
        <h1>We're currently facing a problem. Please try again later</h1>
    {{/if}}
  </div>
</main>
